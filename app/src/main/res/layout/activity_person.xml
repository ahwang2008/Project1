<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.PersonActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="395dp"
        android:layout_height="250dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        tools:context="ui.LoginFragment"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="FIRST NAME"
            android:id="@+id/personFirstNameTextView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/actualPersonFirstNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray">
        </View>

        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="LAST NAME"
            android:id="@+id/personLastNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"/>

        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/actualPersonLastNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray">
        </View>

        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="GENDER"
            android:id="@+id/personGenderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"/>

        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/actualPersonGenderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray">
        </View>

    </LinearLayout>

    <ExpandableListView
        android:id="@+id/person_event_lists"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginTop="230dp"/>

</android.support.constraint.ConstraintLayout>
